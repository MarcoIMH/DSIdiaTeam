<Page
    x:Class="FinalProyect.Page3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FinalProyect"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="DarkViolet">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="10*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border BorderThickness="1" BorderBrush="Black" Grid.Column="1" Grid.Row="1" Background="Violet"/>
        
        <AppBarButton Icon="Back" Width="100" Height="100" Background="Violet"/>

        <ScrollViewer Grid.Column="1" Grid.Row="1" >
            <Grid>
                <StackPanel>
                    <StackPanel Tag="Sonido" HorizontalAlignment="Center">
                        <TextBlock Text="Sonido" TextWrapping="Wrap" TextDecorations="Underline" FontWeight="Bold" FontSize="48" Width="300" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <TextBlock Text="Volumen general" TextWrapping="Wrap" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <Slider Width="300" VerticalAlignment="Center" Value="70" HorizontalAlignment="Right" Margin="545,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Width="1115" Margin="0,0,0,20" HorizontalAlignment="Center">
                            <TextBlock Text="Volumen de efectos" TextWrapping="Wrap" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <Slider Width="300" VerticalAlignment="Center" Value="50" HorizontalAlignment="Right" Margin="500,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Width="1115" Margin="0,0,0,20" HorizontalAlignment="Center">
                            <TextBlock Text="Volumen de música" TextWrapping="Wrap" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <Slider Width="300" VerticalAlignment="Center" Value="30" HorizontalAlignment="Right" Margin="504,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Tag="Gráficos" HorizontalAlignment="Center">
                        <TextBlock Text="Gráficos" TextWrapping="Wrap" TextDecorations="Underline" FontWeight="Bold" FontSize="48"/>

                        <StackPanel Orientation="Horizontal" Width="1115" Margin="0,0,0,20">
                            <TextBlock Text="Sombras" TextWrapping="Wrap" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <ToggleSwitch HorizontalAlignment="Right" FontSize="36" OnContent="Activadas" OffContent="Desactivadas" IsOn="True" Margin="714,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Width="1115" Margin="0,0,0,20">
                            <TextBlock Text="Calidad de mapa" TextWrapping="Wrap" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <ComboBox Width="300" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="36" Margin="547,0,0,0" SelectedIndex="1">
                                <TextBlock Text="Baja" TextWrapping="Wrap"/>
                                <TextBlock Text="Media" TextWrapping="Wrap"/>
                                <TextBlock Text="Alta" TextWrapping="Wrap"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Width="1115" Margin="0,0,0,20">
                            <TextBlock Text="Calidad de vehículos" TextWrapping="Wrap" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <ComboBox VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="36" Margin="489,0,0,0" Width="300" SelectedIndex="1">
                                <TextBlock Text="Baja" TextWrapping="Wrap"/>
                                <TextBlock Text="Media" TextWrapping="Wrap"/>
                                <TextBlock Text="Alta" TextWrapping="Wrap"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Tag="Controles" HorizontalAlignment="Center">
                        <TextBlock Text="Controles" TextWrapping="Wrap" TextDecorations="Underline" FontWeight="Bold" FontSize="48"/>

                        <StackPanel Orientation="Horizontal" Width="1115" Margin="0,0,0,20">
                            <TextBlock Text="Control de giro" TextWrapping="Wrap" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <ComboBox Width="300" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="36" Margin="573,0,0,0" SelectedIndex="1">
                                <TextBlock Text="Giroscopio" TextWrapping="Wrap"/>
                                <TextBlock Text="Volante" TextWrapping="Wrap"/>
                                <TextBlock Text="Flechas" TextWrapping="Wrap"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        


    </Grid>
</Page>
