    <Page.Resources>

        <!--TemplateReward-->
        <DataTemplate x:Key="MisionTemplate" x:DataType="local:Mision">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock x:Name="TextoMision" Text="{x:Bind TextoDeMision, Mode=OneWay}" FontSize="12"/>
                <Image x:Name="ImagenMision" Width="50" Height="50" Source="{x:Bind Imagen, Mode=OneWay}"/>
                <ProgressBar x:Name="BarraMision" Maximum="{x:Bind Objetivo, Mode=OneWay}" Value="{x:Bind Progreso, Mode=OneWay}" 
                             Width="200" Height="20" Background="MintCream" Foreground="Black"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="RewardTemplate">
            <StackPanel Height="100" Width="300" Background="#FF6C6B6B">
                <TextBlock Text="Mision1" VerticalAlignment="Top" FontSize="40" HorizontalAlignment="Center"/>
                <Image Source="misionIcon" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Height="70"/>
            </StackPanel>
        </DataTemplate>

    </Page.Resources>

